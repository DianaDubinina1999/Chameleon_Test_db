<?xml version="1.0" encoding="UTF-8"?>
<DbGears xmlns="http://chameleon.ibs-qa.ru/schema/db">
    <Connection name="H2" driver="org.h2.Driver" url="jdbc:h2:tcp://localhost:9092/mem:testdb;DB_CLOSE_DELAY=-1;user=#{user};password=#{password}" autoCommit="true">
        <Params>
            <FieldString name="Пользователь" locator="user"/>
            <FieldString name="Пароль" locator="password"/>
        </Params>
    </Connection>
    <Query name="Добавление продукта" statement="insert into FOOD (FOOD_ID,FOOD_NAME,FOOD_TYPE,FOOD_EXOTIC)
values (:id,:name,:type, :exotic)">
        <Params>
            <FieldInteger locator="id" name="FOOD_ID"/>
            <FieldString locator="name" name="FOOD_NAME"/>
            <FieldString name="FOOD_TYPE" locator="type"/>
            <FieldInteger name="FOOD_EXOTIC" locator="exotic"/>
        </Params>
    </Query>
    <Query name="Перечень элементов" statement="select * from FOOD order by FOOD_ID">
        <Result>
            <FieldInteger name="FOOD_ID" locator="id"/>
            <FieldString name="FOOD_NAME" locator="name"/>
        </Result>
    </Query>
    <Query name="Удаление добавленных элементов" statement="DELETE from FOOD where FOOD_ID >= 5"/>
</DbGears>